{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "lib": ["ES2018", "DOM"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declarationDir": "dist/types/esm"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
